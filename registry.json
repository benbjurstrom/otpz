{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "otpz",
  "homepage": "https://github.com/benbjurstrom/otpz",
  "items": [
    {
      "name": "react",
      "type": "registry:block",
      "title": "OTPz Authentication (React)",
      "description": "Complete passwordless OTP authentication with self-contained controllers for React and Inertia.js",
      "author": "Ben Bjurstrom <ben@benbjurstrom.com>",
      "registryDependencies": ["button", "input", "label", "checkbox"],
      "dependencies": ["@inertiajs/react", "lucide-react"],
      "files": [
        {
          "path": "registry/react/otpz-login.tsx",
          "type": "registry:page",
          "target": "~/resources/js/pages/auth/otpz-login.tsx"
        },
        {
          "path": "registry/react/otpz-verify.tsx",
          "type": "registry:page",
          "target": "~/resources/js/pages/auth/otpz-verify.tsx"
        },
        {
          "path": "registry/react/OtpzLoginController.php",
          "type": "registry:file",
          "target": "~/app/Http/Controllers/Auth/OtpzLoginController.php"
        },
        {
          "path": "registry/react/OtpzVerificationController.php",
          "type": "registry:file",
          "target": "~/app/Http/Controllers/Auth/OtpzVerificationController.php"
        }
      ],
      "docs": "For installation and usage instructions, see: https://github.com/benbjurstrom/otpz"
    },
    {
      "name": "vue",
      "type": "registry:block",
      "title": "OTPz Authentication (Vue)",
      "description": "Complete passwordless OTP authentication with self-contained controllers for Vue and Inertia.js",
      "author": "Ben Bjurstrom <ben@benbjurstrom.com>",
      "registryDependencies": ["button", "input", "label", "checkbox"],
      "dependencies": ["@inertiajs/vue3", "lucide-vue-next"],
      "files": [
        {
          "path": "registry/vue/OtpzLogin.vue",
          "type": "registry:page",
          "target": "~/resources/js/pages/auth/OtpzLogin.vue"
        },
        {
          "path": "registry/vue/OtpzVerify.vue",
          "type": "registry:page",
          "target": "~/resources/js/pages/auth/OtpzVerify.vue"
        },
        {
          "path": "registry/vue/OtpzLoginController.php",
          "type": "registry:file",
          "target": "~/app/Http/Controllers/Auth/OtpzLoginController.php"
        },
        {
          "path": "registry/vue/OtpzVerificationController.php",
          "type": "registry:file",
          "target": "~/app/Http/Controllers/Auth/OtpzVerificationController.php"
        }
      ],
      "docs": "For installation and usage instructions, see: https://github.com/benbjurstrom/otpz"
    }
  ]
}
